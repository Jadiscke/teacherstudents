{% extends "layout.njk" %}
{% block content %}

    <div class="card table-container">
      <a href="/students/create">Novo</a>
      <table>
        <thead>
          <tr>
            <th>Membro</th>
            <th>Sangue</th>
            <th>Peso</th>
            <th>Altura</th>
            <th>Ação</th>
          </tr>
          
        </thead>
        <tbody>
          {% for student in students %}
            <tr>
              <td>
                <div>
                  <span style="background-image: url({{student.avatar_url}})"></span>
                {{student.name}}
                </div>
                
              </td>
              <td>
                <div>
                  <span>{{student.blood}}</span>
                </div>
                
              </td>
              <td>
                <div>
                  <span>{{student.weight}}</span>
                </div>
                
              </td>
              <td>
                <div>
                  <span>{{student.height}}</span>
                </div>
                
              </td>
              <td>
                <a href="/students/{{student.id}}">ver</a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

{% endblock %}