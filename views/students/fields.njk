<div class="item">
  <div>Avatar URL</div>
  <div>
    <input type="url" name="avatar_url" placeholder="http://" required="required" value="{{student.avatar_url}}">
  </div>

</div>

<div class="item">
  <div>Nome Completo</div>
  <div>
    <input type="text" name="name" placeholder="Nome do Aluno" value="{{student.name}}">
  </div>

</div>

<div class="item">
  <div>E-mail</div>
  <div>
    <input type="email" name="email" placeholder="example@mail.com" value="{{student.email}}">
  </div>
</div>

<div class="item">
  <div>Data de Nascimento</div>
  <div>
    <input type="date" name="birth" value="{{student.birth}}">
  </div>
</div>

<div class="item">
  <div>Ano Escolar</div>
  <div>
    <select name="level">
      <option value="1EF" {%  if member.blood == "1EF" %} selected="selected" {% endif %}>
        1° Ano do Ensino Fundamental
      </option>
      <option value="2EF" {%  if member.blood == "2EF" %} selected="selected" {% endif %}>
        2° Ano do Ensino Fundamental
      </option>
      <option value="3EF" {%  if member.blood == "3EF" %} selected="selected" {% endif %}>
        3° Ano do Ensino Fundamental
      </option>
      <option value="4EF" {%  if member.blood == "4EF" %} selected="selected" {% endif %}>
        4° Ano do Ensino Fundamental
      </option>
      <option value="5EF" {%  if member.blood == "5EF" %} selected="selected" {% endif %}>
        5° Ano do Ensino Fundamental
      </option>
    </select>
  </div>
</div>



 


