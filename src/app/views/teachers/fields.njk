
<div class="item">
  <div>Avatar URL</div>
  <div>
    <input type="url" name="avatar_url" placeholder="http://" required="required" value="{{teacher.avatar_url}}">
  </div>

</div>

<div class="item">
  <div>Nome Completo</div>
  <div>
    <input type="text" name="name" placeholder="Fulano da Silva Sauro" value="{{teacher.name}}">
  </div>

</div>

<div class="item">
  <div>Data de Nascimento</div>
  <div>
    <input type="date" name="birth_date" value="{{teacher.birth_date}}">
  </div>

</div>

<div class="item">
  <div>Tipo de Aula</div>
  <div>
    <span>
      <input type="radio" name="class_type" value="local" {{'checked' if (teacher.class_type != 'distance')}}>
      Presencial
    </span>
    <span>
      <input type="radio" name="class_type" value="distance" {{'checked' if (teacher.class_type == 'distance')}}>
      À Distância
    </span>
  </div>
</div>

<div class="item">
  <div>Nível de Escolaridade</div>
  <div>
    <select name="education_level">
      <option value="highschool" {%  if teacher.education_level == "highschool" %} selected="selected" {% endif %}>
        Medio
      </option>
      <option value="undergraduation" {%  if teacher.education_level == "undergraduation" %} selected="selected" {% endif %}>
        Superior Incompleto
      </option>
      <option value="undergraduated" {%  if teacher.education_level == "undergraduated" %} selected="selected" {% endif %}>
        Superior Completo
      </option>
      <option value="master" {%  if teacher.education_level == "master" %} selected="selected" {% endif %}>
        Mestrado
      </option>
      <option value="doctor" {%  if teacher.education_level == "doctor" %} selected="selected" {% endif %}>
        Doutorado
      </option>
    </select>
  </div>
</div>

<div class="item">
  <div>Acompanhamento</div>
  <div>
    <input type="text" name="subjects_taught" placeholder="Ex: Matemática, Fisica" ,="," value="{{teacher.subjects_taught}}">
  </div>
</div>

<button type="submit">Salvar</button>