{% extends "layout.njk" %}
{% block content %}

    <div class="card table-container">
      <a href="/teachers/create">Novo</a>
      <table>
        <thead>
          <tr>
            <th>Professor</th>
            <th>Atendimento</th>
            <th>Alunos</th>
            <th>Ação</th>
          </tr>
          
        </thead>
        <tbody>
          {% for teacher in teachers %}
            <tr>
              <td>
                <div>
                  <span style="background-image: url({{teacher.avatar_url}})"></span>
                {{teacher.name}}
                </div>
                
              </td>
              <td>
                <div>
                  {% for service in teacher.subjects_taught %}
                    <span>{{service}}</span>
                  {% endfor %}
                </div>
                
              </td>
              <td>
                <div class="total-students">
                  {{teacher.total_students}}
                </div>
                
              </td>
              <td>
                <a href="/teachers/{{teacher.id}}">ver</a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

{% endblock %}