<div class="item">
  <div>Avatar URL</div>
  <div>
    <input type="url" name="avatar_url" placeholder="http://" required="required" value="{{student.avatar_url}}">
  </div>

</div>

<div class="item">
  <div>Nome Completo</div>
  <div>
    <input type="text" name="name" placeholder="Nome do Aluno" value="{{student.name}}">
  </div>

</div>

<div class="item">
  <div>E-mail</div>
  <div>
    <input type="email" name="email" placeholder="example@mail.com" value="{{student.email}}">
  </div>
</div>

<div class="item">
  <div>Data de Nascimento</div>
  <div>
    <input type="date" name="birth_date" value="{{student.birth_date}}">
  </div>
</div>

<div class="item">
  <div>Ano Escolar</div>
  <div>
    <select name="education_level">
      <option value="1EF" {%  if student.education_level == "1EF" %} selected="selected" {% endif %}>
        1° Ano do Ensino Fundamental
      </option>
      <option value="2EF" {%  if student.education_level == "2EF" %} selected="selected" {% endif %}>
        2° Ano do Ensino Fundamental
      </option>
      <option value="3EF" {%  if student.education_level == "3EF" %} selected="selected" {% endif %}>
        3° Ano do Ensino Fundamental
      </option>
      <option value="4EF" {%  if student.education_level == "4EF" %} selected="selected" {% endif %}>
        4° Ano do Ensino Fundamental
      </option>
      <option value="5EF" {%  if student.education_level == "5EF" %} selected="selected" {% endif %}>
        5° Ano do Ensino Fundamental
      </option>
    </select>
  </div>
</div>

<div class="item">
  <div>Acompanhamento</div>
  <div>
    <input 
      type="text" 
      name="subjects" 
      placeholder="Ex: Matemática, Fisica" 
      value="{{student.subjects}}"
    >
  </div>
</div>

<div class="item">
  <div>Carga Horária Semanal</div>
  <div>
    <input type="number" min="0" max="40" oninput="validity.valid||(value='');" name="week_hours" placeholder="6" value="{{student.week_hours}}">
  </div>

</div>

<div class="item">
  <div>Professor</div>
  <div>
    <select name="teacher_id">
    
    {% for teacher in teachers %}
      <option value={{teacher.id}} {%  if student.teacher_id == teacher.id %} selected="selected" {% endif %}>
        {{teacher.name}}
      </option>
    {% endfor %}

    </select>
  </div>
</div>

<button type="submit">Salvar</button>